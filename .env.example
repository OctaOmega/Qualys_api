QUALYS_BASE_URL=https://gateway.qg1.apps.qualys.com
QUALYS_CERTVIEW_LIST_ENDPOINT=/certview/v2/certificates/list
QUALYS_INTERNAL_AUTH_ENDPOINT=/auth/token
# Option 1: Explicit Credentials (Recommended)
QUALYS_USERNAME=your_username
QUALYS_PASSWORD=your_password
# Option 2: JSON Payload (Legacy)
QUALYS_INTERNAL_AUTH_PAYLOAD={"username": "user", "password": "password"}

QUALYS_TIMEOUT_SECS=30
PAGE_SIZE=50

FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=dev-secret-key
DATABASE_URL=sqlite:///app.db
